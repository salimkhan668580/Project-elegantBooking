<%- include ("./partials/header.ejs") %>
<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 100vh; background-image: url(https://images.unsplash.com/photo-1510076857177-7470076d4098?q=80&w=1472&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); background-position: center; background-size: cover;">
  <div class="bg-white p-5 rounded" style="width: 28vw;">
    <h1 class="text-uppercase text-center font-weight-bold text-zinc-700" style="font-size: 1.5rem;">Create new account</h1>
    <form action="/register" method="post">
      <input class="form-control rounded mt-2" type="text" name="username" placeholder="username">
      <input class="form-control rounded mt-2" type="email" name="email" placeholder="email">
      <input class="form-control rounded mt-2" type="number" name="contact" placeholder="contact">
      <input class="form-control rounded mt-2" type="password" name="password" placeholder="password">
      <input class="btn btn-danger rounded-pill mt-4 w-100"  type="submit" value="Create New Account">
      <a class="font-weight-bold text-zinc-500 d-block mt-2" href="#">Forgot password?</a>
      <p class="fs-6 text font-weight-bold mt-4 text-center">By continuing, you agree to Pinterest's Terms of Service Notice at collection</p>
    </form>
    <a class="d-block text-center font-weight-bold text-zinc-700 mt-4"  href="/">Login Existing Account</a>
  </div>
</div>

<%- include ("./partials/footer.ejs") %>